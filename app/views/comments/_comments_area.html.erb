<table class="comment">
  <% garment.comments.each do |comment| %>

  <tr>
    <td>
      <%= link_to user_path(comment.user) do %>
        <% if comment.user.profile_image? %>
          <%= image_tag comment.user.profile_image.to_s, :size => "50x50" %>
        <% else %>
          <%= image_tag asset_path("default.png", alt: "ユーザーアイコン", :size => "50x50") %>
        <% end %>
        <br><%= comment.user.name %></br>
      <% end %>
   </td>
   <td><%= comment.body %></td>

    <% if comment.user.id == current_user.id %>
      <td>
        <%= link_to "削除", garment_comment_path(comment.garment, comment), method: :delete, "data-confirm" => "本当に消してもいいですか?", class: "btn btn-danger", remote: true %>
      </td>
    <% end %>
  </tr>

 <% end %>
</table>