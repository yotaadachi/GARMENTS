<body class="login">
  <div class="container">
    <div class="row">

      <h2 class="login-title">ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :名前, class: "control-label text-left col-sm-2 col-md-2" %><br />
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :パスワード, class: "control-label text-left col-sm-2 col-md-2" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :ログインを記憶する %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-default btn-lg btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>
