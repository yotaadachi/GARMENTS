<div class="signin">
  <div class="container">
    <div class="row">
      <h2 class="signin-title">新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="row">
          <div class="form-group">
            <div class="row">
              <%= f.label :名前, class: "control-label text-left col-sm-2 col-md-2" %><br />
            </div>
              <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <div class="row">
              <%= f.label :メールアドレス, class: "control-label text-left col-sm-2 col-md-2" %><br />
            </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <div class="row">
              <%= f.label :パスワード, class: "control-label text-left col-sm-2 col-md-2 password-form" %>
              <% if @minimum_password_length %>
                <p class="text-left col-sm-2 col-md-2 password-length"><em>(<%= @minimum_password_length %> characters minimum)</em></p>
              <% end %><br />
            </div>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <div class="row">
              <%= f.label :パスワード確認, class: "control-label text-left col-sm-2 col-md-2" %><br />
            </div>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <%= f.submit "新規登録", class: "btn btn-default" %>

      <% end %>

            <div class="signin-link">
              <%= link_to "ログイン", new_user_session_path %>
            </div>
          </div>
        </div>

    </div>
  </div>
</div>