<div class="container">
 <p id="notice"></p>
 <h2 class="user_edit" style="padding-top: 50px;">登録情報</h2>
 <%= form_for(@user) do |f| %>
  <label for="user_name">名前</label>
  <%= f.text_field :name %>
  <div class="row">
  <div class="form-group has-icon">
   <label class="control-label sr-only" for="inputEmail">プロフィール画像</label>
   <%= f.file_field :profile_image_id, accept: 'image/jpeg,image/gif,image/png' %>
  </div>
  </div>
  <div class="row">
  <label for="user_introduction">自己紹介文</label>
  <%= f.text_field :introduction %>
  </div>
  <div class="row">
  <%= f.submit "更新" %>
 <% end %>
 <% if @user.errors.any? %>
  <p>errors prohibited this user from being saved:</p>
 <% end %>
 </div>
</div>