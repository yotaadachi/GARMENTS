<div class="followers">
  <div class="container">
    <div class="row">
      <h3 class="title">お気に入り一覧</h3>

      <table class="table">

       <thead>
        <tr>
          <th class="text-center">投稿者</th>
          <th>タイトル</th>
          <th>カテゴリー</td>
          <th>投稿日時</th>
          <th>お気に入り解除</th>
        </tr>
       </thead>

       <tbody>
        <% @user.favorites.each do |favorite| %>
        <tr>
          <td><div class="text-center">
                <%= link_to user_path(favorite.garment.user), class: "profile-image" do %>
                  <% if favorite.garment.user.profile_image? %>
                    <%= image_tag favorite.garment.user.profile_image.to_s, :size => '50x50' %>
              　  <% else %>
               　   <%= image_tag asset_path("default.png", class: "icon", alt: "ユーザーアイコン") %>
                  <% end %>
                <% end %>
              </div>
            <br><div class="text-center"><%= favorite.garment.user.name %></div>
          </td>
          <td><%= link_to garment_path(favorite.garment) do %>
                <%= favorite.garment.title %>
              <% end %>
          </td>
          <td><span class="label label-primary"><%= favorite.garment.type %></span></td>
          <td><%= favorite.garment.created_at.strftime('%Y年%m月%d日%H時%M分') %></td>
          <td id="favorite_button_<%= favorite.garment.id %>">
            <%= render partial: 'favorites/favorite', locals: { garment: favorite.garment } %>
          </td>
      　</tr>
        <% end %>
       </tbody>

      </table>

    </div>
  </div>
</div>