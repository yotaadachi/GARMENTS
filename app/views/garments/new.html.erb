<div class="main">
 <div class="container">
  <div class="row">
   <h3 class="garments_new" style="padding-top:50px;">新規投稿</h3>
   <%= form_for(@garment) do |f| %>
   <div class="form-group">
	<label for="garments_image">写真</label>
	<%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
　　</div>
　　<div class="form-group">
	<label for="garments_title">タイトル</label>
	<%= f.text_field :title %>
　　</div>
　　<div class="form-group">
	<label for="garments_category">カテゴリー</label>
	<%= f.select :type, Garment.types.keys.to_a, include_blank: '選択してください' %>
　　</div>
　　<div class="form-group">
	<label for="garments_body">本文</label>
	<%= f.text_field :body %>
   </div>
   <div class="form-group">
	<label for="garments_tag">タグ</label>
	<%= f.text_field :tag, value: @garment.tag.join(',') %>
   </div>
   <div id="star">
   	<label for="garments_rating">評価</label>
	<%= f.hidden_field :rate, id: :review_star %>
	</div>
	<script>
	$('#star').raty({
		size :36,
		starOff: '<%= asset_path('star-off.png') %>',
		starOn : '<%= asset_path('star-on.png') %>',
		starHalf: '<%= asset_path('star-half.png') %>',
		scoreName: 'garment[rate]',
		half: true,
		score: 0
	});
    </script>
    <%= f.hidden_field :user_id, value: current_user.id %>

	<%= f.submit "投稿" %>
	<% end %>
  </div>
 </div>
</div>