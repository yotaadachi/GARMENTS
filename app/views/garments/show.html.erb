<div class="main">
 <div class="container">
  <div class="row">
   <h3 class="garments_show" style="padding-top: 20px;">投稿詳細</h3>
   　<!-- S3による写真 -->
   <%= image_tag @garment.image.to_s, :size => '350x350' %>
   　<!-- S3による写真 -->
　　<h4>
	<span class="label label-primary">カテゴリー:<%= @garment.type %></span>
  <%= render 'garments/tag_list', tag_list: @garment.tag_list %>
　　</h4>
　　<!-- 星による評価機能 -->
    <div id="star">
     <label for="garments_rating">評価</label>
    </div>
    <script>
    $('#star').raty({
    	size :36,
    	starOff: '<%= asset_path('star-off.png') %>',
    	starOn: '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      scoreName: 'garment[rate]',
    	half: true,
    	readOnly: true,
    	score: <%= @garment.rate %>
    });
    </script>
    <!-- 星による評価機能 -->

    <h4><span>タイトル:<%= @garment.title %></span></h4>
    <h4><span>本文:<%= @garment.body %></span></h4>

　　 <h4>コメント一覧</h4>
    <div id="comment_area">
     <%= render partial: 'comments/comments_area', locals: { garment: @garment, comment: @comment } %>
    </div>
     <%= form_with(model: [@garment, @comment], remote: true ) do |f| %>
      <%= f.text_area :body %>
      <%= f.submit "送信", class: "btn btn-default" %>
     <% end %>

　　<div id="favorite_button_<%= @garment.id %>">
     <%= render partial: 'favorites/favorite', locals: { garment: @garment } %>
    </div>
　　<% if @garment.user.id == current_user.id %>
  　　<%= link_to "投稿編集", edit_garment_path, class: "btn btn-success" %>
  　<%= link_to "投稿削除", garment_path(@garment), method: :delete, "data-confirm" => "本当に消してもいいですか?", class: "btn btn-danger" %>
    <% end %>
  </div>
 </div>
</div>