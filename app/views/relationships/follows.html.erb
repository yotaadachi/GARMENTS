<h1 class="headline" style="padding-top: 40px;">フォロー</h1>
<table class="table">
 <tbody>
 <% @users.each do |user| %>
  <tr class="contents">
  	<td>
      <%= link_to user_path(user) do %>
       <% if user.profile_image? %>
     　 <%= image_tag user.profile_image.to_s, :size => '50x50' %>
    　 <% else %>
     　 <img src="/assets/default.png" class="icon" alt="ユーザアイコン">
    　 <% end %>
      <% end %>
    </td>
　　 <td><%= user.name %></td>
    <td>フォロー数:<%= user.followings.count %></td>
    <td>フォロワー数:<%= user.followers.count %></td>
    <td>
       <% unless current_user == user %>
        <% if current_user.followings?(user) %>
          <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
            <%= f.hidden_field :follow_id, value:user.id %>
            <%= f.submit "フォローを外す", class: "btn btn-primary" %>
           <% end %>
        <% else %>
           <%= form_for(current_user.relationships.build, url:relationships_path) do |f| %>
            <%= f.hidden_field :follow_id, value:user.id %>
            <%= f.submit "フォローする", class: "btn btn-success" %>
           <% end %>
        <% end %>
　     <% end %>
    </td>
　　 <td><%= link_to "詳細", user_path(user.id) %></td>
　</tr>
 <% end %>
 </tbody>
</table>